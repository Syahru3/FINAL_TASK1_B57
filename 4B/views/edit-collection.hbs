<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Blog</title>
    <!-- <link rel="stylesheet" href="/assets/css/navbar.css" /> -->
    <link rel="stylesheet" href="/assets/css/collection.css" />
    <link rel="stylesheet" href="/assets/css/post-grid.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .active { color: orangered !important; font-weight: bold !important; }
    </style>
  </head>
  <body>
    <!-- NAV -->
   <nav class="navbar navbar-expand-lg bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/Day 10/index.html">
          <img
            src="https://www.seekpng.com/png/full/25-252939_thumbtack-pin-icon-white-transparent.png"
            style="width: 50px"
            alt="image here"
          />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link text-white" aria-current="page" href="/">Home</a>
            </li>

            <li class="nav-item">
              <a class="nav-link active text-white" href="collection">Add Collection</a>
            </li>
          </ul>

          <a
            style="margin-right: 10px;"
            href="/logout"
            class="btn btn-outline-danger"
          >Logout</a>

        </div>
      </div>
    </nav>
    <!-- NAV -->

    <!-- FORM -->
    <div class="form-container2">
      <br />
      <h1>EDIT PROJECT</h1>
      <br />

      <form
        method="post"
        action="/edit-blog/{{data.id}}"
        enctype="multipart/form-data"
      >
        <div class="blog-proname">
          <label for=""> Title </label>
          <input
            class="blog-input"
            id="pronameinput"
            placeholder="Enter Collection Here..."
            name="nameColl"
            value="{{data.nameColl}}"
            required
          />
        </div>

        <div class="blog-proname">
          <label for="image"> Previous Image </label>
          <div class="blog-upload">
            {{! ========================================================= }}
            <input type="hidden" name="existImage" value="{{data.image}}" />

            <!-- Upload image -->
            <div class="d-flex flex-column mb-3">

              {{#if data.image}}
                <img
                  src="/{{data.image}}"
                  id="imagePreview"
                  alt="Image Preview"
                  class="img-fluid rounded-2 w-25 mb-3"
                />
              {{else}}
                <img
                  src=""
                  id="imagePreview"
                  alt="Image Preview"
                  class="img-fluid rounded-2 w-25 mb-3"
                  style="display: none;"
                />
              {{/if}}

              <label for="image"> Upload New Image </label>
              <input
                class="blog-input"
                type="file"
                name="uploadImage"
                id="uploadImage"
                required
              />
            </div>
            {{! ========================================================= }}

          </div>
        </div>

        <div class="submit-btn-div">
          <button type="submit">Edit Post</button>
        </div>
      </form>
    </div>
    <!-- FORM -->

    <div>
      <i class="fa-brands fa-node-js" style="display: none"></i>
      <i class="fa-brands fa-react" style="display: none"></i>
      <i class="fa-solid fa-n" style="display: none"></i>
      <i class="fa-solid fa-quote-right" style="display: none"></i>
    </div>

    <script src="/assets/js/blog.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>